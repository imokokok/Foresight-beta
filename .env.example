# ============================================================
# Foresight 环境变量配置模板
# ============================================================
# 复制此文件为 .env.local 并填入你的配置
# cp .env.example .env.local
# ============================================================

# ------------------------------------------------------------
# Supabase 配置
# ------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# 服务端使用（Relayer / 管理脚本）
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# 兼容旧变量名（部分脚本会读取）
SUPABASE_SERVICE_KEY=your-service-role-key

# ------------------------------------------------------------
# 区块链配置
# ------------------------------------------------------------
NEXT_PUBLIC_CHAIN_ID=80002
NEXT_PUBLIC_RPC_URL=https://rpc-amoy.polygon.technology
PRIVATE_KEY=your-private-key

# ------------------------------------------------------------
# 合约地址 (Polygon Amoy)
# ------------------------------------------------------------
NEXT_PUBLIC_MARKET_FACTORY_ADDRESS=0x0762A2EeFEB20f03ceA60A542FfC8CEC85FE8A30
NEXT_PUBLIC_OUTCOME_TOKEN_ADDRESS=0x6dA31A9B2e9e58909836DDa3aeA7f824b1725087
NEXT_PUBLIC_UMA_ADAPTER_ADDRESS=0x5e42fce766Ad623cE175002B7b2528411C47cc92
NEXT_PUBLIC_FORESIGHT_ADDRESS_AMOY=0x...
NEXT_PUBLIC_USDC_ADDRESS_AMOY=0x...
NEXT_PUBLIC_LP_FEE_STAKING_ADDRESS_AMOY=0x...

# ------------------------------------------------------------
# 合约地址 (其他链，可选)
# ------------------------------------------------------------
NEXT_PUBLIC_FORESIGHT_ADDRESS=0x...
NEXT_PUBLIC_USDC_ADDRESS=0x...
NEXT_PUBLIC_LP_FEE_STAKING_ADDRESS=0x...
NEXT_PUBLIC_FORESIGHT_ADDRESS_POLYGON=0x...
NEXT_PUBLIC_USDC_ADDRESS_POLYGON=0x...
NEXT_PUBLIC_LP_FEE_STAKING_ADDRESS_POLYGON=0x...
NEXT_PUBLIC_FORESIGHT_ADDRESS_SEPOLIA=0x...
NEXT_PUBLIC_USDC_ADDRESS_SEPOLIA=0x...
NEXT_PUBLIC_LP_FEE_STAKING_ADDRESS_SEPOLIA=0x...
NEXT_PUBLIC_FORESIGHT_ADDRESS_LOCALHOST=0x...
NEXT_PUBLIC_USDC_ADDRESS_LOCALHOST=0x...
NEXT_PUBLIC_LP_FEE_STAKING_ADDRESS_LOCALHOST=0x...

# ------------------------------------------------------------
# Relayer 服务配置
# ------------------------------------------------------------
NEXT_PUBLIC_RELAYER_URL=http://localhost:3001
RELAYER_PORT=3001
RELAYER_HOST=0.0.0.0

# ------------------------------------------------------------
# Embedded Wallet（邮箱登录=创建/恢复钱包）
# ------------------------------------------------------------
# 可选值：magic | privy | web3auth
NEXT_PUBLIC_EMBEDDED_WALLET_PROVIDER=magic

# Magic（示例）
NEXT_PUBLIC_MAGIC_PUBLISHABLE_KEY=
MAGIC_SECRET_KEY=

# ------------------------------------------------------------
# Proxy Wallet（资产归集地址）
# ------------------------------------------------------------
# 可选值：safe | proxy
NEXT_PUBLIC_PROXY_WALLET_TYPE=safe

# 部署/派生工厂（按链配置）
PROXY_WALLET_FACTORY_ADDRESS=
SAFE_FACTORY_ADDRESS=
SAFE_SINGLETON_ADDRESS=
SAFE_FALLBACK_HANDLER_ADDRESS=

# ------------------------------------------------------------
# Gasless（relayer 代付 gas）
# ------------------------------------------------------------
GASLESS_ENABLED=false
RELAYER_GASLESS_SIGNER_PRIVATE_KEY=
CUSTODIAL_SIGNER_PRIVATE_KEY=
RELAYER_GASLESS_PAYMASTER_URL=

NEXT_PUBLIC_AA_ENABLED=false
NEXT_PUBLIC_EMBEDDED_AUTH_ENABLED=false

# ------------------------------------------------------------
# Redis 配置 (可选)
# ------------------------------------------------------------
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=foresight:

# ------------------------------------------------------------
# 日志配置
# ------------------------------------------------------------
LOG_FORMAT=text
LOG_LEVEL=info

# ------------------------------------------------------------
# 监控配置
# ------------------------------------------------------------
METRICS_ENABLED=true

# ------------------------------------------------------------
# Sentry 错误监控 (可选)
# ------------------------------------------------------------
# 获取方式：https://sentry.io 组织设置 -> 项目 -> 创建项目
SENTRY_DSN=https://xxx@sentry.io/xxx
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug
SENTRY_AUTH_TOKEN=your-sentry-auth-token

SMTP_URL=
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
SMTP_POOL=
SMTP_POOL_MAX_CONNECTIONS=
SMTP_POOL_MAX_MESSAGES=
SMTP_CONNECTION_TIMEOUT_MS=
SMTP_GREETING_TIMEOUT_MS=
SMTP_SOCKET_TIMEOUT_MS=
SMTP_SEND_MAX_ATTEMPTS=
SMTP_SEND_RETRY_BASE_DELAY_MS=
